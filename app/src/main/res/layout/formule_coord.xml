                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:text="@string/expl_lambda"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:maxLines="100" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="@string/ext_deltaphi"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:text="@string/expl_deltaphi"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:maxLines="100" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="4dp"
                                        android:text="@string/formula"
                                        android:textSize="14sp"
                                        android:textStyle="italic"
                                        android:textColor="#000000" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="4dp"
                                        android:text="@string/form_deltaphi"
                                        android:textSize="14sp"
                                        android:textStyle="italic"
                                        android:textColor="#000000"
                                        android:maxLines="100" />
                                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="@string/ext_deltalambda"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:text="@string/expl_deltalambda"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:maxLines="100" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
