<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ivancristina.navigazione.FormuleActivity">

    <ScrollView
        android:id="@+id/calculate_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        >
        <LinearLayout
            android:id="@+id/layout_calculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/layout_values"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:id="@+id/layout_phia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/phia"
                        />

                    <EditText
                        android:id="@+id/phia_degrees"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/degrees"
                        android:imeOptions="actionNext"
                        android:inputType="numberSigned|numberDecimal"
                        android:lines="1"
                        android:padding="4dp"
                        android:textColor="#000000"
                        android:textColorHint="#607D8B"
                        android:textSize="12sp" />
                    <EditText
                        android:id="@+id/phia_minutes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/minutes"
                        android:imeOptions="actionNext"
                        android:inputType="numberSigned|numberDecimal"
                        android:lines="1"
                        android:padding="4dp"
                        android:textColor="#000000"
                        android:textColorHint="#607D8B"
                        android:textSize="12sp"
                        />
                    <EditText
                        android:id="@+id/phia_seconds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/seconds"
                        android:imeOptions="actionNext"
                        android:inputType="numberSigned|numberDecimal"
                        android:lines="1"
                        android:padding="4dp"
                        android:textColor="#000000"
                        android:textColorHint="#607D8B"
                        android:textSize="12sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=";"
                        android:paddingRight="4dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_lambdaa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lambdaa"
                        />
                    <EditText
                        android:id="@+id/lambdaa_degrees"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/degrees"
                        android:imeOptions="actionNext"
                        android:inputType="numberSigned|numberDecimal"
                        android:lines="1"
                        android:padding="4dp"
                        android:textColor="#000000"
                        android:textColorHint="#607D8B"
                        android:textSize="12sp"
                        />
                    <EditText
                        android:id="@+id/lambdaa_minutes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/minutes"
                        android:imeOptions="actionNext"
                        android:inputType="numberSigned|numberDecimal"
                        android:lines="1"
                        android:padding="4dp"
                        android:textColor="#000000"
                        android:textColorHint="#607D8B"
                        android:textSize="12sp"
                        />
                    <EditText
                        android:id="@+id/lambdaa_seconds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/seconds"
                        android:imeOptions="actionNext"
                        android:inputType="numberSigned|numberDecimal"
                        android:lines="1"
                        android:padding="4dp"
                        android:textColor="#000000"
                        android:textColorHint="#607D8B"
                        android:textSize="12sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=";"
                        android:paddingRight="4dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_phib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/phib"
                        />
                    <EditText
                        android:id="@+id/phib_degrees"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/degrees"
                        android:imeOptions="actionNext"
                        android:inputType="numberSigned|numberDecimal"
                        android:lines="1"
                        android:padding="4dp"
                        android:textColor="#000000"
                        android:textColorHint="#607D8B"
                        android:textSize="12sp"
                        />
                    <EditText
                        android:id="@+id/phib_minutes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/minutes"
                        android:imeOptions="actionNext"
                        android:inputType="numberSigned|numberDecimal"
                        android:lines="1"
                        android:padding="4dp"
                        android:textColor="#000000"
                        android:textColorHint="#607D8B"
                        android:textSize="12sp"
                        />
                    <EditText
                        android:id="@+id/phib_seconds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/seconds"
                        android:imeOptions="actionNext"
                        android:inputType="numberSigned|numberDecimal"
                        android:lines="1"
                        android:padding="4dp"
                        android:textColor="#000000"
                        android:textColorHint="#607D8B"
                        android:textSize="12sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=";"
                        android:paddingRight="4dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_lambdab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lambdab"
                        />
                    <EditText
                        android:id="@+id/lambdab_degrees"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/degrees"
                        android:imeOptions="actionNext"
                        android:inputType="numberSigned|numberDecimal"
                        android:lines="1"
                        android:padding="4dp"
                        android:textColor="#000000"
                        android:textColorHint="#607D8B"
                        android:textSize="12sp"
                        />
                    <EditText
                        android:id="@+id/lambdab_minutes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/minutes"
                        android:imeOptions="actionNext"
                        android:inputType="numberSigned|numberDecimal"
                        android:lines="1"
                        android:padding="4dp"
                        android:textColor="#000000"
                        android:textColorHint="#607D8B"
                        android:textSize="12sp"
                        />
                    <EditText
                        android:id="@+id/lambdab_seconds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/seconds"
                        android:imeOptions="actionNext"
                        android:inputType="numberSigned|numberDecimal"
                        android:lines="1"
                        android:padding="4dp"
                        android:textColor="#000000"
                        android:textColorHint="#607D8B"
                        android:textSize="12sp" />
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_solve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal|center_vertical"
                >
                <Button
                    android:id="@+id/solve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Risolvi"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:layout_gravity="center_horizontal|center_vertical"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal|center_vertical"
                >
                <TextView
                    android:id="@+id/result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Il tuo risultato verrà mostrato qui"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:lines="1"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
